{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "noEmitOnError": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "src/demo/demo.tsx"],
  "paths": {
    "preact": ["./node_modules/preact"]
  }
}
